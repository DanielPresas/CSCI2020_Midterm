<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="center" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.danielpresas_100699431.AboutController">
  <children>
    <Label text="About" />
    <Label text="Student Info:" />
    <VBox alignment="center">
      <children>
        <Label fx:id="studentNumber" text="[Student number here]" />
        <Label fx:id="studentName"   text="[Student name here]" />
        <Label fx:id="studentEmail"  text="[Student email here]" />
      </children>
      <padding>
        <Insets left="200.0" right="200.0" />
      </padding>
    </VBox>
    <Label text="Software description:" />
    <Label fx:id="softwareDescription" text="[Software description here]" />
    <Button fx:id="backButton" text="Back to main menu" onAction="#backToMain" />
  </children>
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
  </padding>
</VBox>
